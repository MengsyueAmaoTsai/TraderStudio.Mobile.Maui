<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RichillCapital.TraderStudio.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RichillCapital.TraderStudio.Mobile"
    xmlns:views="clr-namespace:RichillCapital.TraderStudio.Mobile.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="RichillCapital.TraderStudio.Mobile">
    
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="DarkSlateBlue">
            <Label Text="Hello, flyout header" />
        </Grid>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Home">
        <ShellContent 
            Title="Home" 
            ContentTemplate="{DataTemplate views:MainPage}"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Brokerages">
        <ShellContent 
            Title="Brokerages" 
            ContentTemplate="{DataTemplate views:BrokeragesPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Data Feeds">
        <ShellContent 
            Title="Data Feeds" 
            ContentTemplate="{DataTemplate views:DataFeedsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Signal Sources">
        <ShellContent 
            Title="Signal Sources" 
            ContentTemplate="{DataTemplate views:SignalSourcesPage}"/>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid BackgroundColor="DarkSlateBlue">
            <Label Text="Hello, flyout footer" />
        </Grid>
    </Shell.FlyoutFooter>
</Shell>
