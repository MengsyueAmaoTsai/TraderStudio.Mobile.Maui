<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:RichillCapital.TraderStudio.Mobile.Models"
             xmlns:viewModels="clr-namespace:RichillCapital.TraderStudio.Mobile.ViewModels"
             xmlns:templates="clr-namespace:RichillCapital.TraderStudio.Mobile.Views.Templates"
             x:Class="RichillCapital.TraderStudio.Mobile.Views.BrokeragesPage"
             x:DataType="viewModels:BrokeragesViewModel"
             Title="BrokeragesPage">
    <Grid RowDefinitions="Auto, Auto">
        <ActivityIndicator 
            Grid.Row="0"
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}">
        </ActivityIndicator>
        
        <Grid Grid.Row="1">
            <CollectionView
                ItemsSource="{Binding Brokerages}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding ViewDetailsCommand}"
                SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:BrokerageItem">
                        <templates:BrokerageItemTemplate/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>