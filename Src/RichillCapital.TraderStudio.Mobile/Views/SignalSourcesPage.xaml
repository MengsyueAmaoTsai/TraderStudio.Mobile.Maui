<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RichillCapital.TraderStudio.Mobile.ViewModels"
             xmlns:templates="clr-namespace:RichillCapital.TraderStudio.Mobile.Views.Templates"
             x:Class="RichillCapital.TraderStudio.Mobile.Views.SignalSourcesPage"
             x:DataType="viewModels:SignalSourcesViewModel"
             Title="Signal sources">
    <CollectionView 
        ItemsSource="{Binding SignalSources}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <templates:SignalSourceItemTemplate />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>